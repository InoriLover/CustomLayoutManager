<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bkg_toolbar_color_focus_border"
              android:orientation="vertical"
              android:padding="@dimen/standard_padding_8dp">

    <TextView
        android:id="@+id/textSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"/>
    <ImageView
        android:layout_width="@dimen/icon_little_size_width"
        android:layout_height="@dimen/icon_little_size_height"
        android:src="@mipmap/icon_drop_down"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_little_4dp"/>
</RelativeLayout>